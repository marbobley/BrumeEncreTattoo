{% extends 'base.html.twig' %}

{% block title %}Galerie Tatouages - Fine Line & Floral à Aniane - {{ site_name }}{% endblock %}

{% block seo %}
    <meta name="description" content="Découvrez le portfolio de Brume d'Encre Tattoo à Aniane. Galerie de tatouages personnalisés près de Montpellier : fine line, floral, dentelle et aquarelle.">
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-5">Galerie Portfolio</h1>

    <div class="row">
        {% for image in images %}
            <div class="col-md-4 mb-4">
                <div class="portfolio-card shadow-sm h-100">
                    <img src="{{ asset('images/portfolio/' ~ image.src) }}"
                         alt="{{ image.alt }}"
                         class="img-fluid rounded w-100"
                         loading="lazy">
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="text-center mt-5">
        <p class="lead">Chaque pièce est unique et réalisée sur mesure.</p>
        <a href="{{ path('app_contact') }}" class="btn btn-primary btn-lg">Discutons de votre projet</a>
    </div>
</div>
{% endblock %}
